<div class="container">
  <div class="d-flex flex-column align-items-center mt-4">  
    <div>
      <img src="<%= @user.profile_icon %>" class="rounded rounded-circle image">
    </div>
    <%= @user.name %>
  </div>
  <ul class="nav d-flex flex-column pt-5">
      <li class="nav-item pb-2">
        <i class="fas fa-shopping-basket text-light border border-1 rounded-circle p-2"></i>
        <%= link_to 'My Shopping List', items_path, class: "ps-2 text-decoration-none text-light" %>
        <p class="ms-5 border-bottom pt-2"></p>
      </li>
      <li class="nav-item pb-2">
        <i class="fas fa-list text-light border border-1 rounded-circle p-2"></i>
        <%= link_to 'Uncategorized Items', uncategorized_items_path, class: "ps-3 text-decoration-none text-light" %>
        <p class="ms-5 border-bottom pt-2"></p>
      </li>
      <li class="nav-item pb-2">
        <i class="fas fa-layer-group text-light border border-1 rounded-circle p-2"></i>
        <%= link_to 'All Categories', groups_path, class: "ps-3 text-decoration-none text-light" %>
        <p class="ms-5 border-bottom pt-2"></p>
      </li>
      <li class="nav-item pb-2">
        <i class="fas fa-user text-light border border-1 rounded-circle p-2"></i>
        <%= link_to 'Edit Profile', edit_user_registration_path, class: "ps-3 text-decoration-none text-light" %>
        <p class="ms-5 border-bottom pt-2"></p>
      </li>
      <li class="nav-item">
        <i class="fas fa-sign-out-alt text-light border border-1 rounded-circle p-2"></i>
        <%= link_to 'Sign out', destroy_user_session_path, :method => :delete, class: "ps-3 text-decoration-none text-light" %>
        <p class="ms-5 border-bottom pt-2"></p>
      </li>
  </ul>
</div>
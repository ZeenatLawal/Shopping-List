<%= render 'shared/nav' %>
<h1>Items</h1>
<div>
  <ul>
   <h3>Total Amount: </h3>
   <%= @amount_sum %>
   <h3>Total number of items on my list: </h3>
   <%= @item.count %>
    <% @item.each do |item| %>
      <li class="list-unstyled px-5">
          <h3>Name: </h3>
          <%= item.name %>
          <br><br>
          <h4>Amount: </h4>
          <%= item.amount %>
        <br><br>
      </li>
    <% end %>
    <%= link_to 'New Item', new_item_path %>
  </ul>
</div>

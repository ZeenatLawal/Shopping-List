<%= render 'shared/nav' %>
<h3>Items</h3>
<div>
  <div class="bg-light d-flex justify-content-between p-1 mb-2">
    <p>Total Amount: </p>
    <p><b>$</b><%= @amount_sum %></p>
  </div>
  <div class="bg-light d-flex justify-content-between p-1">
    <p>Total number of items on my list: </p>
    <%= @item.count %>
  </div>
  <ul class="list-unstyled d-flex flex-column">
    <% @item.each do |item| %>
      <li>
        <% if item.group_id %>
          <div class="image">
            <img src="<%= item.group.icon %>" class="img-fluid img-thumbnail">
          </div>
        <% else %>
          <div class="image">
            <img src="https://via.placeholder.com/75" class="img-fluid img-thumbnail">
          </div>
        <% end %>
      </li>
      <li>
        <%= item.name %>
      </li>
      <li>
        <p><b>$</b><%= item.amount %></p>
      </li>
      <li>
        <p><%= item.created_at.strftime("%d/%m/%Y") %></p>
      </li>
      <li><%= link_to 'Remove Item', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></li>
      <br><br>
    <% end %>
  </ul>
</div>
<%= link_to 'New Item', new_item_path, class: "d-flex justify-content-center btn btn-primary position-fixed bottom-0 start-50 translate-middle-x w-75" %>

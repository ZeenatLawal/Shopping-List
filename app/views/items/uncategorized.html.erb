<h1>Items</h1>
<ul class="nav d-flex justify-content-around">
    <li class="nav-item">
      <%= link_to 'My Shopping List', items_path %>
    </li>
    <li class="nav-item">
      <%= link_to 'Uncategorized Items', uncategorized_items_path %>
    </li>
    <li class="nav-item">
      <%= link_to 'All Categories', groups_path %>
    </li>
    <%= link_to root_path do %>
      <span class="fas fa-bars"></span>
    <% end %>
</ul>
<div>
  <ul>
   <h3>Total Amount: </h3>
   <%= @amount_sum %>
   <h3>Total number of items uncategorized: </h3>
   <%= @uncategorized.count %>
    <% @uncategorized.each do |uncategorized| %>
      <li class="list-unstyled px-5">
          <h3>Name: </h3>
          <%= uncategorized.name %>
          <br><br>
          <h4>Amount: </h4>
          <%= uncategorized.amount %>
        <br><br>
      </li>
    <% end %>
    <%= link_to 'New Item', new_item_path %>
  </ul>
</div>

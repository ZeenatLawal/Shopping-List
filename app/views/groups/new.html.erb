<h2>New Group</h2>

<%= simple_form_for @group do |f| %>
  <div class="form-inputs">
    <%= f.input :name,
                required: false,
                autofocus: true %>
    <%= f.input :icon,  as: :file,
                required: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Add Group" %>
  </div>
<% end %>
